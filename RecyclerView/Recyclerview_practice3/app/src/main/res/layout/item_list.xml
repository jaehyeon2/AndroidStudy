<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/item_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:padding="5dp"
        android:textAlignment="center"
        android:text="123"
        android:textStyle="bold"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/item_english"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/item_english"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:padding="5dp"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:text="english"
        android:textStyle="bold"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/item_id"
        app:layout_constraintRight_toLeftOf="@+id/item_korean"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/item_korean"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:padding="5dp"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:text="phone"
        android:textStyle="bold"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/item_english"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>